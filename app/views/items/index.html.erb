<h2 align="center">Products</h2>

<h5 align="center"><%= link_to "Slimline TACs", "#" %> | <%= link_to "Standard TACs", "#" %></h5>

<%= render 'items/catalog' %>





<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th>Image2</th>
      <th>Image3</th>
      <th>Image4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= item.image %></td>
        <td><%= item.image2 %></td>
        <td><%= item.image3 %></td>
        <td><%= item.image4 %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
